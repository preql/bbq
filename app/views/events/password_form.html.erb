<h1>Доступ только по пин-коду</h1>

<%= form_tag('', method: 'post') do |f| %>
  <div class="form-group">
    <%= label 'Пин-код', :pincode, t('activerecord.attributes.event.pincode')  %>

    <%= text_field_tag :pincode, params[:pincode], class: 'form-control' %>
  </div>

  <div class="actions">
    <%= submit_tag t('activerecord.attributes.event.enter_pincode'), class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'На главную', events_path %>
